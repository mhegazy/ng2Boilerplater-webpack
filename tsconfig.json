{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "/node_modules",
    "./node_modules",
    "*node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}